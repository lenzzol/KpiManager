@model IEnumerable<KpiManager.DataFieldRelationship>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FieldSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FieldTarget)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FieldSource.DataFieldName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldTarget.DataFieldName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DataFieldRelationshipId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DataFieldRelationshipId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DataFieldRelationshipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
