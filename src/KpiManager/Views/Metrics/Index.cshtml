@model IEnumerable<KpiManager.Metric>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultResultValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metric1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultDataType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultResultValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metric1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultDataType.DataType1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MetricId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MetricId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MetricId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
